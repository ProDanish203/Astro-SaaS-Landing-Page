---
import DefaultLayout from "../../layouts/Default.astro";
import { Header } from "../../components/shared/Header";
import { Footer } from "../../components/shared/Footer";
import { getCollection } from "astro:content";
import { ActionButton, Hexagon } from "../../components/helpers";

const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

const latestPost = posts[0];
---

<DefaultLayout>
  <Header client:load />
  <!-- Hero Section -->
  <section class="py-60 relative overflow-x-clip">
    <div class="absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2">
      <Hexagon size={800} className="size-[800px]" duration={30} client:load />
    </div>
    <div class="absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2">
      <Hexagon
        size={1200}
        className="size-[1200px]"
        duration={50}
        reverse
        client:load
      />
    </div>
    <div class="container">
      <div class="max-w-3xl mx-auto">
        <p
          class="uppercase font-extrabold text-center text-zinc-500 tracking-wider"
        >
          Latest Post
        </p>
        <h1 class="font-heading font-black text-7xl text-center mt-4">
          {latestPost.data.title}
        </h1>
        <p class="text-center text-2xl mt-6 text-zinc-400 max-w-xl mx-auto">
          {latestPost.data.description}
        </p>
        <div class="flex justify-center mt-10">
          <a href={`/blog/${latestPost.slug}`}>
            <ActionButton btnText="Read More" />
          </a>
        </div>
      </div>
    </div>
  </section>
  <div>
    <!-- Blogs section -->
  </div>
  <Footer />
</DefaultLayout>
